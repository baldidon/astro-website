---
/**
 * * Pricing cards with three cards
 */

import { Image } from "astro:assets";
import { Icon } from "astro-icon/components";

// components
import Button from "@components/Button/Button.astro";

interface pricingItem {
	name: string; // plan name
	featured?: boolean; // if true, will be highlighted or otherwise featured
	quantity: number; // optional, can be used for stock or availability
	saleQuantity?: number;
	totalBody?: boolean; // optional, if true, will show total body price
	features: string[]; // list of features
	image: ImageMetadata; // imported image
}

import image1 from "@assets/images/promo1.png";
import image2 from "@assets/images/promo2.png";
import image3 from "@assets/images/promo3.png";

// This is designed for 3 pricing items, but can be modified to support more
const pricingData: pricingItem[] = [
	{
		name: "FIDELITY START",
		featured: false,
		quantity: 3,
		saleQuantity: 5,
		features: ["Tutti i massaggi presenti in catalogo", "Scadenza 1 mese"],
		image: image1,
	},
	{
		name: "FIDELITY PLUS",
		featured: true,
		quantity: 5,
		saleQuantity: 10,
		features: ["Tutti i massaggi presenti in catalogo", "Scadenza 2 mesi"],
		image: image2,
	},
	{
		name: "FIDELITY PRO",
		featured: false,
		quantity: 10,
		totalBody: true,
		features: ["Tutti i massaggi presenti in catalogo", "Scadenza 3 mesi"],
		image: image3,
	},
];
---

<section id="promotions" class="bg-primary-100 w-full scroll-mt-10 px-4 py-8 md:py-12">
	<div class="mx-auto max-w-6xl text-center">
		<h2 class="h2 text-pretty uppercase">Le nostre promozioni</h2>
	</div>

	<!-- works for 3 promotions plans; on mobile enable horizontal snap scroll -->
	<div class="mx-auto flex gap-4 overflow-x-auto snap-x snap-mandatory pt-8 sm:max-w-6xl md:pt-12 lg:grid lg:grid-cols-3 lg:gap-12 lg:overflow-visible relative -mx-4 px-4 scrollbar-hide"
		style="-webkit-overflow-scrolling: touch;"
	>
		{
			pricingData.map((plan) => (
				<div
					class="flex w-full flex-col shrink-0 snap-start min-w-[85%] sm:min-w-[70%] md:min-w-[60%] lg:min-w-0 lg:shrink"
					class:list={[
						{
							"bg-primary-200": plan.featured === true,
						},
					]}
				>
					<div>
						<div class="h-full w-full overflow-hidden">
							<Image
								src={plan.image}
								alt={plan.name}
								width={500}
								height={500}
								class="h-full w-full object-cover"
							/>
						</div>
					</div>
					<div class="border-primary-200 flex h-fit flex-col justify-between border-2 border-t-0 pt-10 pb-10">
						<div>
							<h3 class="h2 text-center">{plan.name}</h3>

							<ul class="mt-4 flex flex-col gap-3 px-8">
								{plan.features.map((feature) => (
									<li class="leading-snug lg:text-lg lg:leading-snug">{feature}</li>
								))}
							</ul>
						</div>
						<p class="font-decorative text-base-800 mt-6 flex justify-center text-center text-[5rem] leading-none">
							{plan.totalBody ? (
								<span class="text-[1.5rem] font-bold uppercase">Total body in omaggio</span>
							) : (
								<span class="text-[1.5rem] font-bold uppercase">
									{plan.saleQuantity}% di sconto
								</span>
							)}
						</p>
					</div>
				</div>
			))
		}
	</div>

	<!-- mobile-only hint to indicate horizontal scrolling -->
	<div class="mt-3 flex items-center justify-center gap-2 text-sm text-base-700 lg:hidden">
		<Icon name="tabler:arrow-narrow-right" class="h-4 w-4 animate-bounce-x-slow motion-reduce:animate-none" />
		<span>Scorri per vedere altre promozioni</span>
	</div>

	<!-- Gift Card Section -->
	<div class="mx-auto mt-16 max-w-6xl">
		<div class="bg-base-100 rounded-lg p-8 text-center">
			<h2 class="h2 text-pretty uppercase mb-8">Gift Card - L'idea regalo perfetta</h2>
			
			<div class="mx-auto max-w-2xl">
				<div class="md:hidden">
					<div class="relative h-48 w-full overflow-hidden rounded-lg">
						<Image
							src={image1}
							alt="Gift Card"
							width={400}
							height={300}
							class="h-full w-full object-cover"
						/>
						<div class="absolute inset-0 bg-gradient-to-br from-white/20 to-transparent animate-pulse"></div>
					</div>
				</div>
				<div class="hidden md:grid gap-4 md:grid-cols-3">
					<div class="h-32 w-full overflow-hidden rounded-lg">
						<Image
							src={image1}
							alt="Gift Card"
							width={400}
							height={300}
							class="h-full w-full object-cover"
						/>
					</div>
					<div class="h-32 w-full overflow-hidden rounded-lg">
						<Image
							src={image2}
							alt="Gift Card"
							width={400}
							height={300}
							class="h-full w-full object-cover"
						/>
					</div>
					<div class="h-32 w-full overflow-hidden rounded-lg">
						<Image
							src={image3}
							alt="Gift Card"
							width={400}
							height={300}
							class="h-full w-full object-cover"
						/>
					</div>
				</div>
			</div>
			
			<div class="mt-8 max-w-2xl mx-auto">
				<p class="text-lg text-base-700 mb-6">
					Regala un'esperienza di benessere unica. Le nostre Gift Card sono la soluzione perfetta per sorprendere chi ami con un momento di puro relax e rigenerazione.
				</p>
				<p class="text-base-700 mb-8">
					Scegli il valore che preferisci e personalizza la tua Gift Card secondo le esigenze del destinatario.
				</p>
				<Button href="/#contact" variant="primary" class="px-8">
					Richiedi la tua Gift Card
				</Button>
			</div>
		</div>
	</div>

	<style>
		@keyframes bounce-x-slow {
			0%, 100% {
				transform: translateX(0);
			}
			50% {
				transform: translateX(6px);
			}
		}

		.animate-bounce-x-slow {
			animation: bounce-x-slow 2.5s ease-in-out infinite;
		}

		@media (prefers-reduced-motion: reduce) {
			.animate-bounce-x-slow {
				animation: none;
			}
		}
	</style>

	<!-- <div class="mt-12 flex justify-center">
		<Button href="/#contact" variant="outline" class="px-8">Get a quote</Button>
	</div> -->
</section>
