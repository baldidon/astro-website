---
/**
 * * Hero with background image
 * You'll want a mobile image, and a desktop image for this.
 */

import { Image } from "astro:assets";

// components
// import Button from "@components/Button/Button.astro";

// images
import heroImage from "@images/hero-bg-crop.jpg";
// import heroImageMobile from "@images/hero-bg-min.jpg";
---

<section id="hero" class="relative z-10 flex min-h-[100lvh] w-full">
	<!-- background image -->
	<div class="absolute -z-10 h-full min-h-full w-full overflow-hidden">
		<div class="absolute inset-0 bg-black/10"></div>

		<Image
			src={heroImage}
			class="hidden h-auto min-h-full w-full scale-105 object-cover object-bottom blur-xs sm:block"
			alt="wedding"
			aria-hidden="true"
			loading="eager"
			height={1400}
		/>
		<Image
			src={heroImage}
			class="h-auto min-h-full w-full scale-105 object-cover blur-xs sm:hidden"
			alt="wedding"
			aria-hidden="true"
			loading="eager"
			width={1200}
		/>
	</div>

	<!-- hero items -->
	<div
		class="site-container justify-items-centerw-full relative flex gap-10 py-44 text-center md:py-52"
	>
		<!-- Hero text -->
		<div class="text-base-50 mx-auto my-auto max-w-[900px] flex-col justify-items-center">
			<h1
				class="font-heading-1 w-fit text-center text-5xl font-semibold drop-shadow-[0_2px_2px_rgba(0,0,0,0.4)] md:text-7xl md:leading-tight"
			>
				L'arte del benessere <br />e della performance
			</h1>
			<p class="mt-8 text-lg drop-shadow-[0_2px_2px_rgba(0,0,0,0.4)] md:max-w-[550px] md:text-2xl">
