---
import { Image } from "astro:assets";

// layout
import BaseLayout from "@layouts/BaseLayout.astro";

// components
import Button from "@components/Button/Button.astro";

// placeholder images
const placeholderImage = "data:image/svg+xml,%3Csvg width='400' height='300' xmlns='http://www.w3.org/2000/svg'%3E%3Crect width='400' height='300' fill='%23e5e7eb'/%3E%3Ctext x='50%25' y='50%25' text-anchor='middle' dy='.3em' fill='%236b7280' font-family='Arial' font-size='16'%3EMassaggio Olistico%3C/text%3E%3C/svg%3E";

const massageData = {
	title: "Massaggio Olistico",
	hero: {
		title: "Massaggio Olistico",
		subtitle: "Approccio completo che unisce mente e corpo",
		description: "Perfetto per rilassamento profondo e riequilibrio energetico. Un'esperienza totale per ritrovare armonia e benessere."
	},
	price: "€55",
	duration: "60 minuti",
	benefits: [
		"Rilassamento profondo di mente e corpo",
		"Riequilibrio energetico",
		"Riduzione dello stress e dell'ansia",
		"Miglioramento della qualità del sonno",
		"Aumento della consapevolezza corporea"
	],
	techniques: [
		{
			name: "Massaggio Svedese",
			description: "Tecnica classica che utilizza manovre fluidi e avvolgenti per indurre profondo rilassamento muscolare e mentale.",
			prices: [
				{ duration: "45 minuti", price: "€45" },
				{ duration: "60 minuti", price: "€55" }
			]
		},
		{
			name: "Rilassamento Profondo",
			description: "Approccio dolce e lento che lavora sul sistema nervoso per ridurre ansia e stress accumulato.",
			prices: [
				{ duration: "60 minuti", price: "€55" },
				{ duration: "75 minuti", price: "€65" }
			]
		},
		{
			name: "Lavoro sui Centri Energetici",
			description: "Tecnica che agisce sui principali centri energetici del corpo per riequilibrare e armonizzare l'intero sistema.",
			prices: [
				{ duration: "45 minuti", price: "€45" },
				{ duration: "60 minuti", price: "€55" }
			]
		},
		{
			name: "Aromaterapia",
			description: "Utilizzo di oli essenziali selezionati per potenziare gli effetti del massaggio e trattare specifiche necessità.",
			prices: [
				{ duration: "45 minuti", price: "€50" },
				{ duration: "60 minuti", price: "€60" }
			]
		}
	],
	images: [placeholderImage, placeholderImage, placeholderImage]
};
---

<BaseLayout title="Massaggio Olistico" description="Approccio completo che unisce mente e corpo per un benessere totale.">
	<!-- Hero Section -->
	<section class="relative h-[40svh] w-full overflow-hidden md:h-[60svh]">
		<div class="absolute inset-0 z-10 bg-black/30"></div>
		<div class="absolute inset-0 bg-primary-200"></div>
		
		<div class="relative z-20 flex h-full w-full items-center justify-center">
			<div class="mx-auto max-w-4xl px-4 text-center">
				<h1 class="h1 text-white mb-4">{massageData.hero.title}</h1>
				<h2 class="text-xl font-semibold text-white/90 mb-6">{massageData.hero.subtitle}</h2>
				<p class="text-lg text-white/80 mb-8 max-w-2xl mx-auto">{massageData.hero.description}</p>
				
				<div class="flex items-center justify-center gap-6">
					<div>
						<span class="text-3xl font-bold text-white">{massageData.price}</span>
						<span class="text-white/80"> / {massageData.duration}</span>
					</div>
					<Button href="/#contact" variant="primary">
						Prenota ora
					</Button>
				</div>
			</div>
		</div>
	</section>

	<!-- Main Content -->
	<div class="site-container mx-auto max-w-6xl py-16">

		<!-- Benefits Section -->
		<div class="mb-16">
			<h2 class="h3 text-center mb-8">Benefici del Massaggio Olistico</h2>
			<div class="grid gap-4 md:grid-cols-2">
				{massageData.benefits.map((benefit) => (
					<div class="flex items-start gap-3">
						<div class="mt-1 h-2 w-2 rounded-full bg-primary-500 flex-shrink-0"></div>
						<p class="text-base-700">{benefit}</p>
					</div>
				))}
			</div>
		</div>

		<!-- Techniques Section -->
		<div class="mb-16">
			<h2 class="h3 text-center mb-8">Tecniche e Prezzi</h2>
			<div class="grid gap-6 md:grid-cols-2">
				{massageData.techniques.map((technique) => (
					<div class="bg-base-100 rounded-lg p-6 border border-base-200">
						<h3 class="text-lg font-semibold text-base-900 mb-2">{technique.name}</h3>
						<p class="text-base-700 mb-4">{technique.description}</p>
						<div class="space-y-2">
							{technique.prices.map((priceOption) => (
								<div class="flex items-center justify-between py-2 border-b border-base-200 last:border-0">
									<span class="text-sm text-base-600">{priceOption.duration}</span>
									<span class="text-lg font-bold text-primary-600">{priceOption.price}</span>
								</div>
							))}
						</div>
					</div>
				))}
			</div>
		</div>

		<!-- Gallery Section -->
		<div class="mb-16">
			<h2 class="h3 text-center mb-8">Galleria</h2>
			<div class="grid gap-4 md:grid-cols-3">
				{[1, 2, 3].map((index) => (
					<div class="relative h-64 overflow-hidden rounded-lg bg-base-200 flex items-center justify-center">
						<div class="text-center">
							<div class="w-16 h-16 bg-base-300 rounded-lg mx-auto mb-2"></div>
							<p class="text-base-600">Immagine {index}</p>
						</div>
					</div>
				))}
			</div>
		</div>
		</div>

		<!-- CTA Section -->
		<section class="bg-primary-100 py-16">
			<div class="mx-auto max-w-4xl text-center">
				<h2 class="h3 mb-4">Pronto a provare il Massaggio Olistico?</h2>
				<p class="text-base-700 mb-8">
					Contattaci per prenotare il tuo trattamento personalizzato e iniziare il tuo percorso verso il benessere totale.
				</p>
				<Button href="/#contact" variant="primary" size="lg">
					Prenota il tuo massaggio
				</Button>
			</div>
		</section>
</BaseLayout>